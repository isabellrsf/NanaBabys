<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fundo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/nanaregistroalimentacao" />

    <!-- Conteúdo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Alimentação"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#8D6E63"
            android:layout_marginBottom="20dp"/>

        <!-- Tipo -->
        <EditText
            android:id="@+id/editTextTipoAlimentacao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tipo (ex: Leite, Papinha...)"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:padding="12dp"
            android:layout_marginBottom="14dp"/>

        <!-- Quantidade -->
        <EditText
            android:id="@+id/editTextQuantidade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Quantidade (ml ou g)"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:padding="12dp"
            android:layout_marginBottom="14dp"/>

        <!-- Horário -->
        <EditText
            android:id="@+id/editTextHorario"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Horário (ex: 14:30)"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/edittext_background"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:padding="12dp"
            android:layout_marginBottom="22dp"/>

        <!-- Botão Registrar -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRegistrarAlimentacao"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:background="@drawable/button_background_login"
            android:textColor="#FFFFFF"
            android:stateListAnimator="@null"/>
    </LinearLayout>

    <!-- Botão Voltar -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonVoltar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:background="@drawable/button_background_login"
        android:textColor="#FFFFFF"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:stateListAnimator="@null"/>
</FrameLayout>
