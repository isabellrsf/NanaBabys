<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fundo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dashboardnana" />

    <!-- Conteúdo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Card Perfil -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F8F4F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewPerfil"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/nanababyicone"
                    android:scaleType="centerCrop"
                    android:contentDescription="Foto do bebê"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:strokeWidth="2dp"
                    app:strokeColor="#8D6E63" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/textViewNomeBebe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome do Bebê"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#8D6E63" />

                    <TextView
                        android:id="@+id/textViewIdadeBebe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idade: X meses"
                        android:textSize="14sp"
                        android:textColor="#8D6E63" />

                    <Button
                        android:id="@+id/buttonAlterarFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alterar Foto"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#8D6E63"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card Alimentação -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F8F4F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconemamadeira"
                    android:contentDescription="Alimentação" />

                <Button
                    android:id="@+id/buttonAlimentacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8D6E63"
                    android:text="Registrar Alimentação"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card Sono -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F8F4F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconelua"
                    android:contentDescription="Sono" />

                <Button
                    android:id="@+id/buttonSono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8D6E63"
                    android:text="Registrar Sono"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card Relatórios -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F8F4F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/relatorio"
                    android:contentDescription="Relatórios" />

                <Button
                    android:id="@+id/buttonRelatorios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8D6E63"
                    android:text="Ver Relatórios"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card Logout -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F8F4F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/deslogar"
                    android:contentDescription="Sair" />

                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#C62828"
                    android:text="Sair"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</FrameLayout>
